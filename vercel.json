{
    "version": 2,
    "builds": [
      { "src": "frontend/package.json", "use": "@vercel/next" },
      { 
        "src": "backend/app.py",
        "use": "@vercel/python",
        "config": { 
          "maxLambdaSize": "15mb",
          "includeFiles": ["backend/**", "requirements.txt"],
          "pythonPath": "backend"
        }
      }
    ],
    "routes": [
      { "src": "/backend-api/(.*)", "dest": "backend/app.py" },
      { "src": "/(.*)", "dest": "frontend/$1" }
    ]
  }