{
    "version": 2,
    "builds": [
      { "src": "frontend/package.json", "use": "@vercel/next" },
      { 
        "src": "backend/app.py",
        "use": "@vercel/python",
        "config": { "maxLambdaSize": "15mb" }
      }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "backend/app.py" },
      { "src": "/(.*)",     "dest": "frontend/$1" }
    ],
    "functions": {
      "backend/app.py": {
        "includeFiles": "backend/**"
      }
    }
  }